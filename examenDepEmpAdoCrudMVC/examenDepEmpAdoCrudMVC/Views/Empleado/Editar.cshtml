@model examenDepEmpAdoCrudMVC.Models.Empleado
@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Editar Empleado
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Editar" method="post">
                        <input type="hidden" asp-for="IdEmpleado" />
                        <div class="mb-3">
                            <label asp-for="NombreEmpleado" class="form-label fw-bold">Nombre Completo</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="NombreEmpleado"
                                       class="form-control"
                                       placeholder="Nombre del empleado"
                                       required
                                       oninvalid="this.setCustomValidity('Por favor, ingresa el nombre del empleado')"
                                       oninput="this.setCustomValidity('')" />
                            </div>
                            <span asp-validation-for="NombreEmpleado" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Departamento</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-building"></i></span>
                                <select name="ReferenciaDepartamento.IdDepartamento" class="form-select" required>
                                    <option value="" selected disabled>-- Seleccione un área --</option>
                                    @foreach (var dep in (ViewBag.Departamentos as List<examenDepEmpAdoCrudMVC.Models.Departamento> ?? new List<examenDepEmpAdoCrudMVC.Models.Departamento>()))
                                    {
                                        // Comparamos el ID de la lista con el ID que ya tiene el empleado
                                        bool esElMismo = Model.ReferenciaDepartamento?.IdDepartamento == dep.IdDepartamento;

                                        <option value="@dep.IdDepartamento" selected="@(esElMismo ? "selected" : null)">
                                            @dep.NombreDepartamento
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" asp-for="Activo" class="form-check-input" />
                            <label asp-for="Activo" class="form-check-label">Empleado Activo</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success py-2">
                                <i class="bi bi-save"></i> Editar Empleado
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary py-2">
                                <i class="bi bi-arrow-left"></i> Cancelar y Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted text-uppercase" style="letter-spacing: 1px;">Edición de registro ID: @Model.IdEmpleado</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}