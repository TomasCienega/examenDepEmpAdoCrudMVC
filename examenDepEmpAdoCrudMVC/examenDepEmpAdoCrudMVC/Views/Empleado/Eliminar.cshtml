@model examenDepEmpAdoCrudMVC.Models.Empleado
@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación
                    </h5>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="mb-4">¿Estás seguro de que deseas eliminar permanentemente a este empleado? Esta acción no se puede deshacer.</p>

                    <div class="alert alert-secondary bg-light border-0 py-3">
                        <h4 class="text-dark mb-1">@Model.NombreEmpleado</h4>
                        <p class="text-muted mb-0">Departamento: @Model.ReferenciaDepartamento?.NombreDepartamento</p>
                        <small class="text-muted">ID de Registro: @Model.IdEmpleado</small>
                    </div>

                    <form asp-action="Eliminar" method="post">
                        @* Es vital mandar el ID oculto para que el controlador sepa a quién borrar *@
                        <input type="hidden" asp-for="IdEmpleado" />

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-danger py-2">
                                <i class="bi bi-trash-fill"></i> Sí, Eliminar Permanentemente
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary py-2">
                                <i class="bi bi-arrow-left"></i> No, Cancelar y Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>